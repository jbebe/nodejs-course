<% include header.ejs %>

<h1>Upload</h1>

<form>
    <div class="form-group">
        <label for="uploadNeptunInput">Neptun code</label>
        <input type="text" id="uploadNeptunInput" class="form-control">
    </div>
    <div class="form-group">
        <label for="taskSelect">Task</label>
        <select class="form-control" id="taskSelect">
            <option>Task #1</option>
            <option>Task #2</option>
            <option>Task #3</option>
            <option disabled selected>Select task</option>
        </select>
    </div>
    <div class="form-group row">
        <label for="fileUpload" class="col-sm-2">Submission</label>
        <input type="file" class="form-control-file col-sm-10" id="fileUpload">
    </div>
    <button type="submit" class="btn btn-primary" style="width: 100%">Submit</button>
</form>

